<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laboratorio.notasmf.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/enota3"
        android:hint="Nota 3"
        android:layout_below="@+id/enota2"
        android:layout_alignLeft="@+id/enota2"
        android:layout_alignStart="@+id/enota2"
        android:fontFamily="sans-serif-smallcaps" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/enota2"
        android:hint="Nota 2"
        android:layout_below="@+id/enota1"
        android:layout_alignLeft="@+id/enota1"
        android:layout_alignStart="@+id/enota1"
        android:fontFamily="sans-serif-smallcaps" />

    <Button
        android:text="Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="onClickCalcular"
        android:layout_below="@+id/enota3"
        android:layout_alignLeft="@+id/enota3"
        android:layout_alignStart="@+id/enota3"
        android:layout_marginTop="11dp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="_____________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snota4"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="Calculo de nota faltante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="51dp"
        android:id="@+id/enota1"
        android:hint="Nota 1"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="?attr/colorControlNormal"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
